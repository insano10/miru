<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <files>
        <file>
            <source>${project.basedir}/scripts/miru-start-all.sh</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/scripts/gather/gather.sh</source>
            <outputDirectory>gather/scripts</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/${artifactId}-${version}.${packaging}</source>
            <outputDirectory>web</outputDirectory>
            <destName>miru-web.war</destName>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/miru.properties</source>
            <outputDirectory>properties</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/lib/jetty-runner.jar</source>
            <outputDirectory>web</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/docs</directory>
            <outputDirectory>docs</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
